{
    "name": "lingsu-ai",
    "version": "1.0.0",
    "description": "中医智慧AI学习伙伴 - 将静态知识转化为动态智慧网络",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && CHOKIDAR_USEPOLLING=true WATCHPACK_POLLING=true WATCHPACK_IGNORE=node_modules npm start",
        "dev:backend": "cd backend && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "start": "cd backend && npm start",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm test",
        "test:backend": "cd backend && npm test",
        "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "keywords": [
        "中医",
        "AI",
        "机器学习",
        "知识图谱",
        "教育",
        "RAG",
        "传统医学"
    ],
    "author": "灵枢AI团队",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
